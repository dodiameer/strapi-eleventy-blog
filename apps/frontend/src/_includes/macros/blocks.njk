{% macro render_blocks(items, env = {}) %}
  <div class="prose lg:prose-lg prose-blue text-black prose-headings:font-serif pb-6">
    {%- for item in items -%}
      {%- if item.key == "media" -%}
        <img src="{{env.API_URL}}{{item.file.data.attributes.url}}" alt="{{item.file.data.attributes.alternativeText}}">
      {%- endif -%}
      {%- if item.key == "richText" -%}
        {{ item.body | markdown | safe }}
      {%- endif -%}
      {%- if item.key == "quote" -%}
        <figure>
          <blockquote>
            <p>{{ item.body }}</p>
          </blockquote>
          <figcaption>â€” {{item.title}}</figcaption>
        </figure>
      {%- endif -%}
    {%- endfor -%}
  </div>
{% endmacro %}